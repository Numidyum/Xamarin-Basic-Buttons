<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xama.PressAndReleaseButtonPage">

    <StackLayout BackgroundColor="#D3084E">

        <Label x:Name="label"
               Text="Aşağıda butona basılı tut!"
               FontSize="Large"
               VerticalOptions="CenterAndExpand" 
               HorizontalOptions="Center" TextColor="#FFFFFF" />

        <Button Text="Yazıyı döndürnek için dokun"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="Center"
                Pressed="OnButtonPressed"
                Released="OnButtonReleased" TextColor="#FFFFFF" BackgroundColor="#002171" CornerRadius="50" />

    </StackLayout>
</ContentPage>